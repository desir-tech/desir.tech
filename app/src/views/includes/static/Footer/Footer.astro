---
import type { IComponent } from "@typings/Component";
import type { LinkProps } from "@typings/Link";
import type { ImageProps } from "@typings/Image";
import type { SocialProps } from "@typings/Social";

export const defaultProps = {
  copyright: "COPYRIGHT_NOT_FOUND",
  impressum: "IMPRESSUM_NOT_FOUND",
  shortcuts: [...new Array(5).map((i) => ({ name: "LINK_NOT_FOUND" }))],
  links: [...new Array(5).map((i) => ({ name: "LINK_NOT_FOUND" }))],
  logo: {
    src: "https://via.placeholder/500",
    ALT: "IMAGE_ALT_NOT_FOUND",
  },
};

export interface IFooter extends IComponent {
  copyright?: string;
  impressum?: string;
  logo?: ImageProps;
  socials?: SocialProps;
  links?: LinkProps[];
  shortcuts?: LinkProps[];
}

const { copyright, impressum, logo, links, shortcuts, socials } = Astro.props;
---

<section class="py-10 overflow-hidden">
  <div class="container mx-auto px-4">
    <div
      class="py-16 px-8 backdrop-blur-lg border-white border-2 border-opacity-25 rounded-3xl"
    >
      <div class="max-w-7xl mx-auto">
        <div class="flex flex-wrap -m-8 mb-8">
          <div class="w-full md:w-1/3 p-8">
            <img
              class="mb-6"
              loading="lazy"
              src={logo?.src ?? defaultProps.logo.src}
              alt={logo?.alt ?? defaultProps.logo.alt}
            />
            <p class="text-xl font-bold">
              {impressum ?? defaultProps.impressum}
            </p>
          </div>
          <div class="w-full md:w-1/3 p-8">
            <ul class="md:max-w-max ml-auto">
              {
                links?.map((link) => (
                  <li class="mb-6">
                    <a
                      class="inline-block text-3xl text-gray-700 hover:text-blue-500 font-black tracking-tight"
                      href="#"
                    >
                      {link?.name}
                    </a>
                  </li>
                )) ??
                  defaultProps.links.map((link, index) => (
                    <li class="mb-6">
                      <a
                        class="inline-block text-3xl text-gray-700 hover:text-blue-500 font-black tracking-tight"
                        href="#"
                      >
                        {link?.name}
                      </a>
                    </li>
                  ))
              }
            </ul>
          </div>
          <div class="w-full md:w-1/3 p-8">
            <ul class="md:max-w-max ml-auto">
              {
                shortcuts?.map((shortcut) => (
                  <li class="mb-4">
                    <a
                      class="inline-block text-gray-500 hover:text-gray-600 font-medium"
                      href="#"
                    >
                      {shortcut?.name}
                    </a>
                  </li>
                )) ??
                  defaultProps.shortcuts.map((shortcut, index) => (
                    <li class="mb-4">
                      <a
                        class="inline-block text-gray-500 hover:text-gray-600 font-medium"
                        href="#"
                      >
                        {shortcut?.name}
                      </a>
                    </li>
                  ))
              }
            </ul>
          </div>
        </div>
        <div class="flex flex-wrap items-center justify-between -m-4">
          <div class="w-auto p-4">
            <p class="font-bold">
              <span>{copyright ?? defaultProps.copyright}</span>
            </p>
          </div>
          <div class="w-auto p-4">
            <div class="flex flex-wrap -m-4">
              <div class="w-auto p-4">
                <a class="block" href="#"
                  ><img src="zanrly-assets/images/insta.svg" alt="" /></a
                >
              </div>
              <div class="w-auto p-4">
                <a class="block" href="#"
                  ><img src="zanrly-assets/images/twitter.svg" alt="" /></a
                >
              </div>
              <div class="w-auto p-4">
                <a class="block" href="#"
                  ><img src="zanrly-assets/images/footers/fb.svg" alt="" /></a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
